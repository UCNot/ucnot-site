{
  "extends": "@run-z/project-config/tsconfig.lib.json",
  "compilerOptions": {
    "exactOptionalPropertyTypes": true,
    "jsx": "react",
    "jsxFactory": "JSX.createElement",
    "jsxFragmentFactory": "JSX.Fragment",
    "lib": ["DOM", "ES2022"],
    "noImplicitOverride": true,
    "outDir": "target/js",
    "rootDir": "./src",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"]
  },
  "include": ["src/**/*"]
}
